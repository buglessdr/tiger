TXTFILES = $(wildcard *.txt)
HTMLFILES = $(patsubst %.txt,../html/%.html,$(TXTFILES))

all: $(HTMLFILES) ../util/doc2html

install:

%.html : %.txt
	../util/doc2html $<

explain.idx: $(TXTFILES) ../util/genmsgidx
	../util/genmsgidx

clean:
	-rm -f *.html

distclean: clean
	-rm -f ../html/*.html explain.idx
